<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Migrate embPaths (POST)</title>
  <style>
    :root { font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial; }
    body { margin: 24px; background: #f8fafc; color: #0f172a; }
    .card { background: #fff; border: 1px solid #e2e8f0; border-radius: 12px; padding: 16px; max-width: 900px; box-shadow: 0 2px 10px rgba(2,6,23,.05); }
    h1 { margin: 0 0 8px; font-size: 22px; }
    .muted { color: #64748b; font-size: 13px; margin-bottom: 8px; }
    label { display:block; font-weight:600; margin: 12px 0 6px; }
    textarea { width:100%; min-height:160px; padding:10px; border:1px solid #cbd5e1; border-radius:8px; background:#fff; font-family: ui-monospace, SFMono-Regular, Menlo, Consolas, monospace; }
    .row { display:flex; align-items:center; gap:12px; flex-wrap: wrap; margin: 12px 0; }
    .btn { appearance:none; border:0; padding:10px 16px; border-radius:10px; font-weight:700; cursor:pointer; background:#2563eb; color:#fff; box-shadow:0 2px 8px rgba(37,99,235,.3); }
    .btn[disabled]{ opacity:.6; cursor:not-allowed; }
    .pill { display:inline-flex; align-items:center; gap:8px; padding:6px 10px; border-radius:999px; background:#eef2ff; color:#3730a3; font-size:12px; }
    .status { font-size:14px; }
    .ok { color:#16a34a; }
    .err { color:#dc2626; }
    pre { margin-top:12px; padding:12px; background:#0b1021; color:#c0caf5; border-radius:10px; max-height:60vh; overflow:auto; white-space:pre-wrap; word-break:break-word; }
  </style>
</head>
<body>
  <div class="card">
    <h1>Migrate <code>embPaths</code></h1>
    <div class="muted">POSTs JSON to <code>/admin/migrate-embpaths</code>. Leave blank to use server defaults.</div>

    <label for="tables">Body <code>tables</code> JSON (map of <em>i_table</em> → [roots])</label>
    <textarea id="tables" placeholder='{"i_agriculture":["agroeconomics","agrochemicals"],"i_biology":["anatomy","bioengineering"]}'></textarea>

    <div class="row">
      <label class="pill">
        <input id="dryRun" type="checkbox" />
        Dry run (no writes)
      </label>
      <button id="runBtn" class="btn">Start Migration</button>
      <span id="status" class="status"></span>
    </div>

    <pre id="output" aria-live="polite">// Results will appear here…</pre>
  </div>

  <script>
    const btn = document.getElementById('runBtn');
    const out = document.getElementById('output');
    const status = document.getElementById('status');
    const dryRunEl = document.getElementById('dryRun');
    const tablesEl = document.getElementById('tables');

    function setBusy(b, msg){ btn.disabled=b; status.textContent=msg||''; status.className='status'; }
    function ok(m){ status.textContent=m; status.className='status ok'; }
    function err(m){ status.textContent=m; status.className='status err'; }

    function parseTablesOrNull(text){
      if(!text || !text.trim()) return null;
      try { return JSON.parse(text); }
      catch(e){ throw new Error('Invalid JSON in "tables": ' + e.message); }
    }

    async function start(){
      setBusy(true,'Posting…');
      out.textContent='';

      let body = { dryRun: !!dryRunEl.checked };
      try {
        const tablesObj = parseTablesOrNull(tablesEl.value);
        if (tablesObj) body.tables = tablesObj;
      } catch (e) {
        setBusy(false); err(e.message); return;
      }

      try {
        const resp = await fetch('/admin/migrate-embpaths', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json', 'Accept':'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify(body)
        });
        const json = await resp.json().catch(()=> ({}));
        if (!resp.ok || json.ok === false) { err('Migration failed'); }
        else { ok('Done'); }
        out.textContent = JSON.stringify(json, null, 2);
      } catch (e) {
        err('Network error: ' + e.message);
      } finally {
        setBusy(false);
      }
    }

    btn.addEventListener('click', start);
  </script>
</body>
</html>
